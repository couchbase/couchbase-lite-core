{
	"log": ["HTTP++", "Sync"],
    
    "interface": ":4994",
    "adminInterface": ":4995",
    "SSLCert": "cert.pem",
    "SSLKey":  "privkey.pem",
    
    "unsupported": {
        "client_cert_auth": {
            "state": "mandatory",
            "ca_cert": "ca_cert.pem",
            "prefixes": [ {"path": "san.email", "delimiters": "@"} ]
        }
    },

	"databases": {
		"itunes": {
			"server": "walrus:walrus_data",
			"users": {
				"GUEST": {"disabled": false, "admin_channels": ["*"] }
			},
            "allow_conflicts": false
		},
		"beer": {
			"server": "walrus:walrus_data",
			"users": {
				"GUEST": {"disabled": false, "admin_channels": ["*"] }
			},
            "allow_conflicts": false
		},
		"images": {
			"server": "walrus:walrus_data",
			"users": {
				"GUEST": {"disabled": false, "admin_channels": ["*"] }
			},
            "allow_conflicts": false
		},
		"scratch": {
			"server": "walrus:",
			"users": {
				"GUEST": {"disabled": false, "admin_channels": ["*"] }
			},
            "allow_conflicts": false
		},
		"scratch_allows_conflicts": {
			"server": "walrus:",
			"users": {
				"GUEST": {"disabled": false, "admin_channels": ["*"] }
			},
            "allow_conflicts": true
		},
        "scratch_revocation": {
            "server": "walrus:",
            "users": {
                "pupshaw": {"password": "frank", "admin_channels": ["a", "b"] }
            },
            "allow_conflicts": false
            "sync": `function (doc, oldDoc) { channel(doc.channels); }`
        },
		"seekrit": {
			"server": "walrus:",
			"users": {
				"pupshaw": {"password": "frank", "email": "pupshaw@couchbase.org", "admin_channels": ["*"] }
			},
            "allow_conflicts": false
		}
	}
}
